{
  "name": "search-electron",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "serve": "vite --port 3000 --host",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:serve": "concurrently -k \"yarn serve\" \"yarn electron\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "electron-updater": "^5.2.1",
    "element-plus": "^2.2.16",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.1.0",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.7",
    "vite": "^3.1.0"
  },
  "build": {
    "appId": "com.sywh.search-attribute-electron",
    "productName": "searchAttribute",
    "copyright": "Copyright Â© 2022 sywh",
    "publish": {
      "provider": "generic",
      "url": "http://www.mr-hei.tech:88/searchUpdate/"
    },
    "win": {
      "icon": "./logo.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": "always",
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
